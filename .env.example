# Environment Variables for YourComfortStay Application

# Database Configuration
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/yourdatabase

# Frontend URL for CORS (IMPORTANT: Use your actual Render URL)
FRONTEND_URL=https://yourcomfortstay.onrender.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# JWT Secret Key
JWT_SECRET_KEY=your_jwt_secret_key_here

# Stripe Configuration (for payments)
STRIPE_API_KEY=your_stripe_api_key_here

# Port (automatically set by Render, but can be overridden locally)
PORT=7000